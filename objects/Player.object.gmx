        1,
        1,
        (activeTool[i,1]+drawRot)*90,
        c_white,
        1
    )
}

// draw legs
for(var i = 0; i &lt; 4; i += 1)
{
    if(legActive[i])
    draw_line(x, y, legX[i], legY[i]);
}

// draw tank
draw_self();


